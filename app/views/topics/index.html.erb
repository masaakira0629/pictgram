<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author"><%= topic.user.name %></h2>
            <%= image_tag topic.image.url %>
             <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
              <%= image_tag 'icons/heart-black.png', id: 'topic-index-icon' %>
             <% end %>
             <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
              <%= image_tag 'icons/heart1.png', id: 'topic-index-icon' %>
             <% end %>
            <% end %>
            <%= topic.favorites.count %>

             <%= link_to new_topic_comment_path(topic_id: topic.id), method: :get do %>
             <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% end %>

            <p class="topic-text">
             <%= topic.description %>
            </p>

            <h4 class="comment-title">コメント</h4>
            <p class="comment-text">
              <%= topic.comments.each do |comment| %>
              <%= topic.description　%>
            <% end %>
            </p>

           </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
