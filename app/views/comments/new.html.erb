<div class="comments-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-5 col-md-offset-3">
         <%= form_with model: [@topic,@comment], url: {action: "create"} do |f| %>
         <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
       　<% end %>
      </div>
    </div>
  </div>
</div>
